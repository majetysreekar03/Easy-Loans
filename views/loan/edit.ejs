<style>
    input,
    select {
        padding: 10px;
        border: none;
        border-radius: 10px;
        margin: 10px;
        font-size: 16px;
        font-weight: 500;
        line-height: 24px;
        font-family: 'Poppins', sans-serif;
        width: 100%;
        background-color: rgba(129, 125, 125, 0.137);
    }

    label {
        font-size: 16px;
        font-weight: 500;
        line-height: 24px;
        font-family: 'Poppins', sans-serif;
        color: purple;
        align-self: center;
        /* margin-left: 20px; */
    }

    
    @media screen and (max-width:575px) {
        label{
            padding-left: 5px;
        }
    }

    @media screen and (min-width: 576px) {
        label{
            padding-left: 1.1vw;
        }
    }

    .btns {
        display: flex;
        justify-content: center;
    }

    .row {
        width: 60%;
    }

    @media screen and (max-width: 991px) {
        .row {
            width: 95%;
        }
        input, select{
            width: 100%;
            position: relative;
            right: 8px;
        }
    }
</style>
