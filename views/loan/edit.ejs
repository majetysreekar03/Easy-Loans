    <h1>Update Loan Details </h1>


    <form action="/loan/<%= loan.id %>/edit?_method=PUT" method="post" style="padding: 10px 10px 5px 10px;" class="mb-3" >
        <div class="row"
            style="background-color: white; padding:5%; margin-left: auto;margin-right: auto; border-radius: 10px;border: dashed purple; ">

            <div>
                <label>Amount</label>
                <br>
                <input type="number" name="amount" id="action" value="<%= loan.amount %>" required>

                <br>
                <label>Interest</label>
                <br>
                <input type="number" name="interest" id="interest" step=".01" value="<%= loan.interest %>" required>
                
                <label>Tenure</label>
                <br>
                <input type="number" name="timePeriod" id="timePeriod" step=".1" value="<%= loan.timePeriod %>" required>
                
                <label for="category">Category</label>
                <select name="category" id="category">
                    <option value="provide" <%=loan.category=='provide' ? 'selected' : '' %> >Provide</option>
                    <option value="request" <%=loan.category=='request' ? 'selected' : '' %>>Request</option>
                </select>
               
            </div>

            <div class="btns">
                <button type="submit" id="btn" class="btn mt-2"
                    style="background-color:rgb(107, 14, 194); color: white; font-size: 20px;">Update</button>
            </div>

        </div>
    </form>