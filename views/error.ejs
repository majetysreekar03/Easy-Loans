<% layout('layout/boilerplate') %>

    <style>
        .page_404{
            padding: 40px 0;
            background: #fff;
            font-family: 'Arvo', serif;
        }


        @media screen and (max-width: 575px) {
             .img1{
            width: 150%;
            position: relative;
            right: 15%;
            }
            .img2{
            width: 140%;
            position: relative;
            right: 15%;
            }

        }

        @media screen and (min-width:576px) and (max-width: 991px) {
            .img1, .img2{
            width: 180%;
            position: relative;
            right: 20%;
        }
       
        }
        

        @media screen and (min-width: 992px) {
            .img1{
                width: 120%;
                position: relative;
                left: 2vw;
                bottom: 3vh;
            }
            .img2{
                width: 100%;
                position: relative;
                left: 2vw;
                bottom: 10vh;
            }
        }


        .four_zero_four_bg h1 {
            font-size: 80px;
        }

        .four_zero_four_bg h3 {
            font-size: 80px;
        }

        .link_404 {
            color: #fff !important;
            padding: 10px 20px;
            background: #39ac31;
            margin: 20px 0;
            display: inline-block;
        }

        @media screen and (min-width:992px) {
            .contant_box_404 {
            padding-left: 6vw;
        }
        }

        
    </style>

    <div class="row mt-5">
        <div class="col-8 offset-2">
            <% if(process.env.NODE_ENV == "production" ) { %>
                <section class="page_404">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12 ">
                                <div class="col-sm-10 col-sm-offset-1  text-center">
                                    <div class="four_zero_four_bg ">
                                       <% if(error.status == 404) {%>  <img src="/stylesheets/page404.png" alt="IMG HERE" class="img1"> 
                                       <% }else{ %> 
                                        <img src="/stylesheets/error.png" alt="IMG HERE" class="img2"> 
                                        <% } %> 
                                       <h2> <%= error.status %> </h2>
                                    </div>

                                    <div class="contant_box_404" style="text-align: center;">
                                        <h3 class="h2">
                                            <%= err.message %>
                                        </h3>
                                        <button onclick="goBack()" class="btn btn-success">Go Back</button>
                                        <!-- <a href="" class="link_404">Go to Home</a> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <% } %>

                    <% if(process.env.NODE_ENV != "production" ) { %>
                        <div class="alert alert-danger" role="alert">
                            <h3 class="alert-heading">
                                <%= err.status %> : <%= err.name %>
                            </h3>
                            <h5>
                                <%= err.message %>
                            </h5>
                            <hr>
                            <p>
                                <%= err.stack %>
                            </p>
                        </div>
                        <button onclick="goBack()" class="btn btn-success"
                            style="position: absolute; left: 75% ;">Back</button>
                        <% } %>
        </div>

        <script>
            function goBack() {
                window.history.back();
            }
        </script>