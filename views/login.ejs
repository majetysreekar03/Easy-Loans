<% layout('layout/boilerplate') %>
    
    <style>
       
        p {
            font-family: 'Open Sans', sans-serif;
            font-size: 20px;
        }

        .para {
            padding-top: 30px;
            padding-right: 60px;
            padding-bottom: 10px;
            padding-left: 30px;

        }

        .container {
            padding-top: 2vh;
        }


        button {
            margin: 10px;
            font-size: 1.5rem;
        }

        img {
            height: 30%;
            width: 30%;
            position: relative;
            top: 3px;
        }


        
        @media only screen and (min-width:768px) and (max-width:991px) {
            img {
                height: 40vh;
                width: 30vw;
            }
        }

    
    </style>


    <main>

        <div class="mt-3">
            <div class="container">
                <div class="heading">
                    <h1 style="color: purple;">EASY LOANS</h1>
                </div>


                <div class="row" style="text-align: center;">

                    <div class="col-lg-6" style="margin-top: auto; margin-bottom:auto;">
                        <div class="para" style="text-align: center; color: purple; ">
                            <p>This is a web-based tool that assists individuals in getting best possible
                                loans from others without involvement of Banks and assets</p>
                        </div>

                        <div class="buttons ms-auto me-auto">
                            <a href="/auth/google"><button type="button" class="btn "
                                    style="padding: 10px; width: 250px; font-size: 20px ;background-image:linear-gradient(to right,#EE6D98,#8A5EBF); color:white">Login
                                    With <i class="fab fa-google-plus-g"
                                        style="font-size: 25px;position: relative; top: 2px;"></i> </button></a>
                        </div>
                    </div>


                    <div class="col-lg-4 image">
                        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item">
                                    <img src="/stylesheets/repay.png" class="d-block w-100 col-md-4 img_here" alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <!-- <h5 style="color: purple;">Flexible Repayments</h5> -->
                                    </div>
                                </div>

                                <div class="carousel-item">
                                    <img src="/stylesheets/interest.png" class="d-block w-100 col-md-4 img_here" alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <!-- <h5 style="color: purple;">Fair Interest Rates</h5> -->
                                    </div>
                                </div>

                                <div class="carousel-item">
                                    <img src="/stylesheets/assets.png" class="d-block w-100 col-md-4 img_here" alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <!-- <h5 style="color: purple;">No Collateral Required</h5> -->
                                    </div>
                                </div>
                                <div class="carousel-item active">
                                    <img src="/stylesheets/userfriendly.png" class="d-block w-100 col-md-4 img_here" alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <!-- <h5 style="color: purple;">Userfriendly Interface</h5> -->
                                    </div>
                                </div>

                            </div>

                            <div class="carousel-indicators">
                                <button type="button " data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0"
                                    class="active" aria-current="true" aria-label="Slide 1"
                                    style="color: purple;"></button>
                                <button type="button" style="color: purple;" data-bs-target="#carouselExampleCaptions"
                                    data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" style="color: purple;" data-bs-target="#carouselExampleCaptions"
                                    data-bs-slide-to="2" aria-label="Slide 3"></button>
                                <button type="button" style="color: purple;" data-bs-target="#carouselExampleCaptions"
                                    data-bs-slide-to="3" aria-label="Slide 4"></button>

                            </div>

                        </div>
                    </div>



                </div>
            </div>
        </div>
    </main>



