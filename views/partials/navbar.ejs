<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<style>
    .navbar-brand {
        margin-left: 20px;
        margin-top: 0px;
    }

    .nav-item {
        margin-bottom: 10px;
        margin-right: 13px;
        margin-top: 2px;
        font-size: 16px;
        font-weight: 700;
        line-height: 24px;
        font-family: 'Poppins', sans-serif;
        ;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light py-1"
    style=" background-image:linear-gradient(to right,#EE6D98,#8A5EBF) ; ">
    <a class="navbar-brand" href="/home"
        style="font-size:1.75rem; font-family: 'Comic Sans MS', 'Comic Sans', cursive;color: white;">EasyLoans</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#loginnavbar"
        aria-controls="loginnavbar" aria-expanded="false" aria-label="Toggle navigation" style="color:white;">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="loginnavbar">
        
        <% if(currentUser !== undefined ){ %>
        <ul class="navbar-nav me-auto" style="position: relative; top: 9px;font-weight: 500;font-size: large;">
            <li class="nav-item">
                <a class="nav-link" href="/home" style="color: white;font-weight: 500;font-size: large;">Home</a>
            </li>
            <% if(currentUser !=='undefined' ){ %>
                <li class="nav-item">
                    <a class="nav-link" href="/home?isPending=true"
                        style="color: white;font-weight: 500;font-size: large;">My Deals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home?isPending=false"
                        style="color: white;font-weight: 500;font-size: large;">Closed</a>
                </li>
                <% } %>
        </ul>
        <% } %> 
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="/about"
                    style="color: white;font-weight: 500;font-size: large;position: relative; top: 9px;">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= currentUser === 'undefined' ? 'disabled' : '' %>" href="/loan/apply"
                    style="color: white;font-weight: 500;font-size: large;position: relative; top: 9px;">Apply</a>
            </li>
            <% if(currentUser !== undefined ){ %>

                <li class="nav-item">
                    <a class="nav-link"
                        style="color: white;font-weight: 500;font-size: large;position: relative; top: 9px;"
                        href="/auth/logout"><i class="fa-solid fa-right-from-bracket fa-xl"
                            style="font-size: 30px;"></i></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link mx-1" style="color: white;font-weight: 500;font-size: large;" href="/profile">
                        <img src="<%= currentUser.profilePicUrl %>" alt="ProfilePic" style="border-radius: 50%;"
                            width="40px">
                    </a>

                </li>
                <% }else{ %>
                    <li class="nav-item">
                        <a class="nav-link"
                            style="color: white;font-weight: 500;font-size: large;position: relative; top: 9px;"
                            href="/auth/login">LogIn</a>
                    </li>
                    <% } %>
        </ul>
    </div>

</nav>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>